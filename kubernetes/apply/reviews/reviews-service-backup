
##################################################################################################
# Reviews service and deployment
##################################################################################################
apiVersion: v1
kind: Service
metadata:
  name: reviews
  labels:
    app: reviews
    service: reviews
spec:
  # sessionAffinity: ClientIP
  ports:
  - port: 8083
    name: reviews
  selector:
    app: reviews
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: bookinfo-reviews
  labels:
    account: reviews
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: reviews-v1
  labels:
    app: reviews
    version: v1
spec:
  replicas: 1
  selector:
    matchLabels:
      app: reviews
      version: v1
  template:
    metadata:
      labels:
        app: reviews
        version: v1
    spec:
      serviceAccountName: bookinfo-reviews
      containers:
      - name: reviews
        image: xzhu0027/bookinfo_grpc_reviews:latest
        command: ["/app/cmd"]
        args: ["reviews"]
        imagePullPolicy: Always
        env:
        - name: REVIEWS_VERSION
          value: "v1"
        ports:
        - containerPort: 8083
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: reviews-v2
  labels:
    app: reviews
    version: v2
spec:
  replicas: 1
  selector:
    matchLabels:
      app: reviews
      version: v2
  template:
    metadata:
      labels:
        app: reviews
        version: v2
    spec:
      serviceAccountName: bookinfo-reviews
      containers:
      - name: reviews
        image: xzhu0027/bookinfo_grpc_reviews:latest
        command: ["/app/cmd"]
        args: ["reviews"]
        imagePullPolicy: Always
        env:
        - name: REVIEWS_VERSION
          value: "v2"
        ports:
        - containerPort: 8083
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: reviews-v3
  labels:
    app: reviews
    version: v3
spec:
  replicas: 1
  selector:
    matchLabels:
      app: reviews
      version: v3
  template:
    metadata:
      labels:
        app: reviews
        version: v3
    spec:
      serviceAccountName: bookinfo-reviews
      containers:
      - name: reviews
        image: xzhu0027/bookinfo_grpc_reviews:latest
        command: ["/app/cmd"]
        args: ["reviews"]
        # imagePullPolicy: Always
        env:
        - name: REVIEWS_VERSION
          value: "v3"
        ports:
        - containerPort: 8083
---